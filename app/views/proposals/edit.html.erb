<div class="proposal-edit row">

  <div class="small-12 column">
    <%= link_to proposals_path, class: "left back clear" do %>
      <i class="icon-angle-left left"></i>
      <%= t("proposals.edit.back_link") %>
    <% end %>

    <div class="right">
      <%= link_to t("proposals.edit.show_link"), proposal_url(@proposal, participatory_process_id: @proposal.participatory_process) %>
    </div>

    <h1><%= t("proposals.edit.editing") %></h1>

    <%= render "form", form_url: proposal_url(@proposal, participatory_process_id: @proposal.participatory_process) %>
  </div>
</div>
